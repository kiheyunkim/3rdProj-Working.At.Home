extends layouts/Main

block content
    h1 비디오 업로드 
    .form-container
        .record-container#jsRecordContainer
            video#jsVideoPreview
            button#jsRecordBtn 녹화하기
        form(action=(routes.working.video.origin+routes.working.video.upload), method="post", enctype="multipart/form-data")
            div.fileUpload
                label(for="file") Video File
                input(type="file", id="file", name="videoFile", required=true, accept="video/*")
            input(type="text", placeholder="제목", name="title",required=true)
            textarea(name="description", placeholder="내용",required=true)
            input(type="submit", value="비디오 업로드")