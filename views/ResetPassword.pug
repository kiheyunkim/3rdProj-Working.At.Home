extends layouts/Main

block content
    .form-container
        form(action=(routes.login.account.origin + routes.login.account.reset), method="post")
            input(type="email", name="email", placeholder="이메일", pattern = "(?=.{1,254}$)[-\\w!#$%&'*+/=`{|}~?^]+(\\.[-\\w!#$%&'*+/=`{|}~?^]+)*@((\\d{1,3}\\.){3}\\d{1,3}|([-\\w]+\\.)+[a-zA-Z]{2,6})$", required=true)
            input(type="text", name="employeenum", placeholder="사번")
            input(type="text", name="name", placeholder="이름",pattern = "[가-힣]{2,4}|[a-zA-Z]{2,10}",title = "올바르지 않은 이름입니다.",required=true)
            input(type="submit", value="비밀번호 초기화하기") 